<div class="custom-font span6 offset3 text-center boxy">

	<h2 class="cool-font-small">Upload Your Stuff</h2>

	<%= simple_form_for @pic do |f| %>
		<%= f.input :hour, :label => 'Which hour?', :placeholder => 'Enter the hour'	%>
		<%=f.input :image, :as => :file %>
		<%= f.input :emotion, :label => 'How did you feel?', :placeholder => 'Happy, Confused, Tired' %>
		<%= f.input :learned, :label => 'What did you learn?', :placeholder => 'HTML5, CSS3, Ruby, Rails, Heroku, Github, Postgres', :input_html => {rows: '3'} %>

		<%= submit_tag 'Submit', :class => 'btn btn-danger btn-large' %>
	<% end %>

</div>
